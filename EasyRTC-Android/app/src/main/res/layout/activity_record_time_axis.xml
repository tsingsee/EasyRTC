<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.LiveActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/live_toolbar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorTheme">

            <TextView
                android:id="@+id/toolbar_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginRight="60dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="20sp"/>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/render_container"
            android:background="#ecf0f6">

            <com.tsingsee.easyrtc.view.ProVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:keepScreenOn="true"/>

            <LinearLayout
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/git_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/loading_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中"
                    android:lines="1"
                    android:textColor="@color/white_color"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/video_view"
                android:divider="?android:attr/listDivider"
                android:orientation="vertical"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/msg_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:textColor="@color/colorTheme"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:gravity="bottom"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</layout>
